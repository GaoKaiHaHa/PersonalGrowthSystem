<Window x:Class="PersonalGrowthSystem.Src.UI.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalGrowthSystem.Src.UI"
        mc:Ignorable="d"
        Title="设置" Height="300" Width="328.272">
    <Grid x:Name="Grid_Window" >
        <Label Content="Google日历密钥" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Text_Path" Height="21" Margin="115,12,85,0" TextWrapping="Wrap" Text="{Binding Path=CredentialsPath, Mode=TwoWay}" VerticalAlignment="Top"/>
        <Button Content="选择" Margin="240,14,5,0" VerticalAlignment="Top" Click="Button_Click"/>
        <CheckBox Content="开机启动" Checked="CheckBox_Checked" IsChecked="{Binding Path=IsStartRun, Mode=TwoWay}" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
